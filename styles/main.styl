@import url('https://fonts.googleapis.com/css2?family=Comfortaa&display=swap')
@import url('https://fonts.googleapis.com/css?family=Orbitron&display=swap')

@import './reset.styl'
@import './variables.styl'

body
  height: 100vh
  margin: 0
  color: white
  background: #1c2127
  overflow: hidden
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif;

  &[data-platform="win32"]
    border: 1px solid $dark1 * 1.45

  &[data-platform="darwin"]
    &[data-dark-mode]
      // background: rgba($dark1, 0)
      background: $dark2
      border: 1px solid $dark2
      border-top: 1px solid black
      border-radius: 4px
    &[data-darwin-old]
      border-top: 1px solid $dark1 * 1.3

#__nuxt
  width: 100%
  height: 100%

h1, h2, h3, h4
  color: $bright1

legend
  color: $bright1 * 0.95
  font-size: 12px
  font-weight: bold
  margin: 6px 0

label
  display: flex
  align-items: center
  color: $bright2
.inset
  margin-bottom: 6px
  &:last-child
    margin-bottom: 0

input, select
  background: $bright1
  border: 2px solid transparent
  font-weight: 700
  border-radius: 2px
  padding: 3px 0 3px 5px
  font-size: 11px
  transition: all 0.2s
  color: $dark1
  &:focus
    background: white
    border: 2px solid $highlight
  &:hover
    background: white

input, select, textarea, label, svg
  &:disabled
  &[disabled]
    pointer-events: none
    opacity: 0.5

button:disabled
  pointer-events: none

input[type="range"]
  padding: unset
  border: unset

input[type="color"]
  border: none
  padding: 0
  overflow: hidden
  &::-webkit-color-swatch-wrapper
    padding: 0
  &::-webkit-color-swatch
    border: none

.form
  input, select, .button
    width: 73px
    margin: 0
    margin-right: 8px

  select, input[type="text"], input[type="number"], .button
    height: 24px

  input[type="color"]
    height: 16px
    border-radius: 2px
    border: 2px solid $bright1

  input[type="checkbox"]
    width: unset

  h3
    font-size: 12px
    font-weight: bold
    margin: 10px 0

  fieldset
    margin: 0
    padding: 0px 12px
    padding-bottom: 2px

  label
    margin: 8px 0

.button
  color: $bright1
  box-shadow: 0 0 0 1px $dark2 * 0.55
  text-shadow: 0 -1px 0px black
  border: 1px solid $dark1 * 1.1
  border-top-color: $dark1 * 1.5
  background: linear-gradient(to bottom, $dark1 * 1.2, rgba($dark2 * 1.4, 0.0)), $dark2 * 1.4
  border-radius: 2px
  padding: 4px 8px
  transition: background 0.15s, border 0.15s
  font-size: 12px
  font-weight: 600
  margin: 5px
  &:hover
    background: linear-gradient(to bottom, $dark1 * 1.2, rgba($dark2 * 1.3, 0.0)), $dark2 * 1.8
    border-top-color: $dark1 * 1.7
    transition: none
  &.pressed
  &:active
    border: 1px solid $dark1 * 0.95
    background: linear-gradient(to bottom, $dark1 * 1.1, $dark2 * 1.275)
  &:disabled
    color: $bright2
  // svg
  //   filter: drop-shadow(0 -1px 0px rgba(0,0,0, 0.6))
  span
    margin-left: 7px

.bordered
  border-radius: 5px
  border: 1px solid $dark1 * 1.1
  border-top-color: $dark1 * 1.25
  background: rgba($dark2, 0.95)
  box-shadow: 0 0 0 1px $dark2 * 0.5, 0 2px 5px rgba(black, 0.15)
  -webkit-backdrop-filter: blur(8px)
  backdrop-filter: blur(8px)

.tipped
  position: relative
  &::before
    content: ''
    display: block
    position: absolute
    width: 0
    height: 0
    triWidth = 7px
    top: - triWidth
    left: 16px
    border-left: triWidth solid transparent
    border-right: triWidth solid transparent
    border-bottom: triWidth solid $dark2
    filter: drop-shadow(0 -1px 0px $dark1 * 1.7) drop-shadow(0 -1px 0px $dark2 * 0.5)

.tipped-bottom
  position: relative
  &::before
    content: ''
    display: block
    position: absolute
    width: 0
    height: 0
    triWidth = 7px
    bottom: - triWidth
    left: 16px
    border-left: triWidth solid transparent
    border-right: triWidth solid transparent
    border-top: triWidth solid $dark2
    filter: drop-shadow(0 1px 0px $dark1 * 1.7) drop-shadow(0 1px 0px $dark2 * 0.5)
  &.bright::before
    border-top-color: $dark1
    filter: drop-shadow(0 1px 0px $dark1) drop-shadow(0 1px 0px $dark2 * 0.5)
